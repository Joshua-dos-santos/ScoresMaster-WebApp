@model IEnumerable<ScoresMaster.Models.Match>

@{
    ViewBag.Title = "MatchDetails";
}
<h2>MatchDetails</h2>


<html>
<body>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MatchID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Home_Team)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Match_Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Away_Team)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MatchID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Home_Team.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Match_Start)<br />
                    @Html.DisplayFor(modelItem => item.Match_Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Away_Team.Name)
                </td>
                <td>
                    @Html.ActionLink("See Home Squad", "Home_team", "Squad", item.Home_Team, new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("See League Info", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("See Away Squad", "Away_team", "Squad", item.Away_Team, new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }

    </table>
</body>
</html>
