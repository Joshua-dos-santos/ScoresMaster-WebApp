@model ScoresMaster.Models.League


<h2>MyProfile</h2>
<style>
    .split {
        height: 100%;
        width: 50%;
        position: fixed;
        z-index: 1;
        top: 0;
        overflow-x: hidden;
        padding-top: 20px;
    }

    /* Control the left side */
    .left {
        left: 0;
        background-color: white;
    }

    /* Control the right side */
    .right {
        right: 0;
        background-color: white;
    }

    /* If you want the content centered horizontally and vertically */
    .centered {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
    }

        /* Style the image inside the centered container, if needed */
        .centered img {
            width: 150px;
            border-radius: 50%;
        }
</style>
<div class="split left">
    <div class="centered">
        <h2>@ViewBag.first_Name  @ViewBag.last_name</h2>
        <p>@ViewBag.email <br />
           @ViewBag.password <br />
           @ViewBag.birth_day<br />
           @ViewBag.Squad</p>
    </div>
</div>

<div class="split right">
    <div class="centered">
        <img src="~/Images/PremierLeague.png" alt="Avatar">
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Name, new SelectList(ViewBag.League))
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Select League" class="btn btn-default @*@Html.Action("MyProfile","Profile")*@" />
            </div>
        </div>
    </div>
</div>
