<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("header", required: false)
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">ScoresMaster</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                @{
                    var userId = (string)TempData.Peek("unique_id");
                    if (userId == null)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Match Details", "Index", "Home", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("National Squads", "CountryList", "Squad", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item" style="float: right; text-align: right">
                            @Html.ActionLink("Login", "LoginAction", "Login", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item" style="float: right; text-align: right">
                            @Html.ActionLink("Registrate", "Register", "Registration", null, new { @class = "nav-link" })
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Match Details", "Index", "Home", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("National Squads", "CountryList", "Squad", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("My Profile", "ShowMyProfile", "Profile", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item" style="float: right; text-align: right">
                            @Html.ActionLink("Logout", "Logout", "Login", null, new { @class = "nav-link" })
                        </li>
                    }}
            </ul>
        </div>
    </nav>
    <div class="container body-content pt-3">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    <script src="~/Scripts/bootstrap.js"></script>
    @RenderSection("scripts", required: false)
</body>

</html>
